# Build AI Brain - Environment Configuration
# Скопируйте этот файл в .env и настройте под себя

# === Основные настройки ===
APP_NAME=Build AI Brain
VERSION=2.0.0
DEBUG=false

# === Сервер ===
HOST=0.0.0.0
PORT=8000
RELOAD=false

# === Vision (Computer Vision) ===
YOLO_MODEL_PATH=yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
DEFAULT_FOCAL_LENGTH=800.0

# === Physics (FEA) ===
# Сталь С235
STEEL_YOUNGS_MODULUS=2.1e11
STEEL_SHEAR_MODULUS=8.1e10
STEEL_POISSON_RATIO=0.3
STEEL_DENSITY=7850
STEEL_YIELD_STRENGTH=235e6

# Труба 48x3 мм
PIPE_OUTER_DIAMETER=0.048
PIPE_WALL_THICKNESS=0.003
PIPE_CROSS_SECTION_AREA=4.5e-4
PIPE_MOMENT_OF_INERTIA=1.1e-7
PIPE_TORSION_CONSTANT=2.2e-7
PIPE_SECTION_MODULUS=4.58e-6

# === Нагрузки ===
DEFAULT_DISTRIBUTED_LOAD=-1000.0
SAFETY_FACTOR=1.5

# Пороги для индикации
LOAD_RATIO_GREEN=0.6
LOAD_RATIO_YELLOW=0.9

# === Динамика (Ветер и Вибрация) ===
# Ветер
BASE_WIND_PRESSURE=300.0
HEIGHT_FACTOR_COEFFICIENT=0.15
AIR_DENSITY=1.225

WIND_FORCE_OK=2000.0
WIND_FORCE_WARNING=5000.0

# Вибрация
CONVEYOR_VIBRATION_FREQ=25.0
MACHINE_VIBRATION_AMPLITUDE=0.002

RESONANCE_RISK_WARNING=0.3
RESONANCE_RISK_DANGER=0.7

# === Качество данных ===
MIN_BRIGHTNESS=50.0
MAX_BRIGHTNESS=240.0
MIN_CONTRAST=30.0
BLUR_THRESHOLD=100.0

MIN_AR_POINTS=4
OPTIMAL_DISTANCE_MIN=2.0
OPTIMAL_DISTANCE_MAX=5.0

# === Фотограмметрия ===
POINT_CLOUD_MERGE_THRESHOLD=0.05
AR_DRIFT_THRESHOLD=0.1
MIN_PHOTOGRAMMETRY_VIEWS=2

# === Демонтаж ===
MIN_GROUND_SUPPORTS=4
VERTICAL_SEARCH_RADIUS=2.0

# === Файлы ===
MAX_UPLOAD_SIZE_MB=10

# === Безопасность (ОБЯЗАТЕЛЬНО изменить в production!) ===
SECRET_KEY=change-this-to-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === Логирование ===
LOG_LEVEL=INFO

# === База данных (опционально, для будущего) ===
# DATABASE_URL=postgresql://user:password@localhost:5432/Build

# === Redis (опционально, для кэширования) ===
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600

# === Дополнительные настройки ===

# Tailscale (для защищенного соединения Android <-> Server)
# TAILSCALE_IP=100.x.x.x

# Sentry (мониторинг ошибок)
# SENTRY_DSN=https://...@sentry.io/...

# AWS S3 (хранение проектов)
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_S3_BUCKET=Build-projects

# Google Cloud (опционально)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Telegram Bot (уведомления)
# TELEGRAM_BOT_TOKEN=...
# TELEGRAM_CHAT_ID=...
